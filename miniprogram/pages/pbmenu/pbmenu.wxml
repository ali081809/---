<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">
	<view class="page__bd">
		<!-- 发布菜单 -->
		<form bindsubmit="fbcd">
			<!-- 需要菜单名称 -->
			<view class="weui-cells__title">菜单名称</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<input class="weui-input" value="{{name}}" name="menuName" placeholder="请输入菜单名称" />
					</view>
				</view>
			</view>
			<!-- 选择菜谱分类 -->
			<view class="weui-cells__title">菜谱分类</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<radio-group name="typeId">
							<!-- 循环遍历菜谱分类 -->
							<block wx:for="{{menusArr}}" wx:key="_id">
								<!-- 给当前分类加了一个默认值，随便去了index为0的，第一个 -->
								<radio checked="{{ischeched}}" value="{{item._id}}" style="font-size:13.5px">{{item.menus}}</radio>
							</block>
						</radio-group>
					</view>
				</view>
			</view>
			<!-- 菜谱图片 -->
			<view class="weui-cells__title">菜谱图片</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<mp-cells>
							<mp-cell>
								<mp-uploader max-count="5" title="图片选择" bindselect="changeImage" files="{{files}}"></mp-uploader>
							</mp-cell>
						</mp-cells>
					</view>
				</view>
			</view>
			<!-- 菜谱做菜步骤 -->
			<view class="weui-cells__title">菜品做法</view>
			<view class="weui-cells weui-cells_after-title">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<textarea class="weui-textarea" value="{{dsc}}" name="desc" placeholder-style="font-size:26rpx" placeholder="请输入菜品做法"
						 style="height: 6.6em" />
						<view class="weui-textarea-counter">不限字数</view>
          </view>
        </view>
      </view>
      <!-- 发布  需要当前用户的openid（云开发自带）-->
      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" form-type="submit">确定</button>
      </view>
    </form>
  </view>
</view>
